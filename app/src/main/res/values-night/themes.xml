<resources>
    <!-- Base application theme. -->
    <style name="Theme.NuberJam" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_main</item>
        <item name="colorPrimaryVariant">@color/primary_main</item>
        <item name="colorOnPrimary">@color/primary_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_darker</item>
        <item name="colorSecondaryVariant">@color/primary_gray</item>
        <item name="colorOnSecondary">@color/primary_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>