<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/space_112dp"
    android:layout_height="@dimen/space_148dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/space_8dp"
    android:layout_marginEnd="@dimen/space_16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_album_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@color/overlay_color"
            tools:src="@tools:sample/avatars"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8dp"
            android:layout_marginEnd="@dimen/space_24dp"
            tools:text="@string/album_title_dummy"
            android:fontFamily="@font/century_gothic_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20sp"
            android:layout_above="@id/tv_album"
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tv_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/album"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/space_8dp"
            android:layout_marginBottom="@dimen/space_4dp"
            android:textSize="@dimen/font_10sp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>