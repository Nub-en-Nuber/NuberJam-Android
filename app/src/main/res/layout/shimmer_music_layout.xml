<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_music"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/space_24dp"
        android:paddingBottom="@dimen/space_64dp">

        <LinearLayout
            android:id="@+id/container_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0dp"
            android:layout_marginTop="@dimen/space_8dp"
            android:layout_marginBottom="@dimen/space_32dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/shimmer_image" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="@dimen/space_200dp"
            android:layout_height="@dimen/space_28dp"
            android:layout_marginBottom="@dimen/space_4dp"
            android:background="@color/shimmer_color"
            app:layout_constraintBottom_toTopOf="@+id/view5"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view8"
            android:layout_width="@dimen/space_24dp"
            android:layout_height="@dimen/space_24dp"
            android:background="@color/shimmer_color"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view4" />

        <View
            android:id="@+id/view5"
            android:layout_width="@dimen/space_80dp"
            android:layout_height="@dimen/space_12dp"
            android:layout_marginBottom="@dimen/space_24dp"
            android:background="@color/shimmer_color"
            app:layout_constraintBottom_toTopOf="@+id/view6"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_10dp"
            android:layout_marginBottom="@dimen/space_4dp"
            android:background="@color/shimmer_color"
            app:layout_constraintBottom_toTopOf="@+id/view7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view7"
            android:layout_width="@dimen/space_20dp"
            android:layout_height="@dimen/space_12dp"
            android:layout_marginBottom="@dimen/space_64dp"
            android:background="@color/shimmer_color"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/space_64dp"
            android:layout_height="@dimen/space_64dp"
            android:layout_marginBottom="@dimen/space_24dp"
            android:elevation="@dimen/space_0dp"
            android:foreground="@color/shimmer_color"
            app:cardCornerRadius="@dimen/space_100dp"
            app:cardElevation="@dimen/space_0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>