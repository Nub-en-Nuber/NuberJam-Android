<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_music"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_24dp">

        <ImageView
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8dp"
            android:adjustViewBounds="true"
            android:foreground="@color/shimmer_color"
            android:scaleType="centerCrop"
            android:src="@drawable/shimmer_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="@dimen/space_200dp"
            android:layout_height="@dimen/space_24dp"
            android:layout_marginTop="@dimen/space_64dp"
            android:background="@color/shimmer_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <View
            android:id="@+id/view8"
            android:layout_width="@dimen/space_24dp"
            android:layout_height="@dimen/space_24dp"
            android:background="@color/shimmer_color"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view4" />

        <View
            android:id="@+id/view5"
            android:layout_width="@dimen/space_80dp"
            android:layout_height="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_4dp"
            android:background="@color/shimmer_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_10dp"
            android:layout_marginTop="@dimen/space_24dp"
            android:background="@color/shimmer_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />

        <View
            android:id="@+id/view7"
            android:layout_width="@dimen/space_20dp"
            android:layout_height="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_4dp"
            android:background="@color/shimmer_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view6" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/space_64dp"
            android:layout_height="@dimen/space_64dp"
            android:layout_marginTop="@dimen/space_64dp"
            android:layout_marginBottom="@dimen/space_24dp"
            android:elevation="@dimen/space_0dp"
            android:foreground="@color/shimmer_color"
            app:cardCornerRadius="@dimen/space_100dp"
            app:cardElevation="@dimen/space_0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>